@model Pizza[]

@{
    ViewData["Title"] = "My pizzas";
    var pizzas = Model;
}



<h2>La mia pizza</h2>

@if (pizzas.Length is 0)
{
    <p>No post to display :\</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Image</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pizza in pizzas)
            {
                <tr>
                    <td>@pizza.Id</td>
                    <td class="image"><img class="post-link-image" src="@pizza.Image"></td>
                    <td class="title">
                        <a href="@Url.Action("Detail", "Pizza", new { Id = pizza.Id })">@pizza.Name</a>
                    </td>
                    <td class="description">@pizza.Description</td>
                </tr>
            }
        </tbody>
    </table>
}